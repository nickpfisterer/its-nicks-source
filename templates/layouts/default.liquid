<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>{% block title %}{{ global.title }}{% endblock %}</title>
    <meta name="description" content="{% block description %}{{ global.intro }}{% endblock %}">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/ico" href="{{ "favicon.png" | asset_url }}">
    {% include "fonts" %}
    {{ "app.css" | asset_url | stylesheet_tag }}
  </head>
  <body>
    <div class="wrapper">
      {% include "header" %}
      <main>
        {% block content %}{% endblock %}
      </main>
    </div>
    {% include "footer" %}
    {% include "analytics" %}
  </body>
</html>
